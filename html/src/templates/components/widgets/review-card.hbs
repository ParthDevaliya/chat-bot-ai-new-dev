<div class="section-bg p-4 rounded position-relative review-card">
    <div class="quotes-icon">
        <i class="ph-fill ph-quotes"></i>
    </div>
    <div class="rating-list d-flex align-items-center mb-3">
        <i class="ph-fill ph-star text-warning"></i>
        <i class="ph-fill ph-star text-warning"></i>
        <i class="ph-fill ph-star text-warning"></i>
        <i class="ph-fill ph-star text-warning"></i>
        <i class="ph-fill ph-star text-warning"></i>
    </div>
    <p class="mb-4">{{reviewText}}</p>
    <div class="d-flex align-items-center gap-3 flex-md-nowrap flex-wrap">
        <img src="{{path}}assets/images/{{image}}" alt="ai Customer" class="rounded-circle" width="50" height="50">
        <div class="d-flex flex-column">
            <h6 class="mb-0">{{customerName}}</h6>
            <span class="font-size-14">{{customerPosition}}</span>
            <span class="text-primary font-size-14">{{customerCompany}}</span>
        </div>
    </div>
</div>